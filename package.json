{
  "name": "nsis-action",
  "version": "3.0.0",
  "description": "Nullsoft scriptable install system action",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.js --bundle --platform=node --target=node16 --minify --outfile=dist/index.cjs",
